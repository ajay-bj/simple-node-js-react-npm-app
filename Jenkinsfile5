pipeline {
    agent any
    stages {
        stage('Clean Workspace') {
            steps {
                // Remove the node_modules directory to avoid conflicts
                sh 'rm -rf node_modules'
            }
        }

        stage('Build') { 
            steps {
                // Install dependencies
                sh 'npm install' 
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Deploy to staging if on develop branch
                    if (env.BRANCH_NAME == 'develop') {
                        echo "Deploying to Staging Environment..."
                        sh './jenkins/scripts/deploy-staging.sh'
                    }
                    // Deploy to production if on main branch
                    else if (env.BRANCH_NAME == 'main') {
                        input message: 'Deploy to Production? (Click "Proceed" to continue)'
                        echo "Deploying to Production Environment..."
                        sh './jenkins/scripts/deploy-production.sh'
                    } else {
                        echo "No deployment for branch: ${env.BRANCH_NAME}"
                    }
                }
            }
        }
    }
}
